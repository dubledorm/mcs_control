.section
  %table
    %thead
      %tr
        %th
          = Role.human_attribute_name(:name)
        %th
          = Instance.model_name.human
        %th
          = I18n.t('words.action')
    %tbody
      - roles.each do |role|
        %tr
          %td
            = role.name
          %td
            = role.resource.name
          %td
            = link_to(I18n.t('words.delete'), admin_role_path(id: role.id, admin_user_id: user.id,
            instance_id: role.resource.id, role_name: role.name), method: :delete,
            data: {confirm: I18n.t('forms.activeadmin.confirm.delete_role_sure',
            role: role.name, user: user.email)})
